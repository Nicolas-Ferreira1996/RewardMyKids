{% extends "../layouts/base.twig" %}
{% block style %}
	<link rel="stylesheet" href="/assets/css/subscribe.css">
{% endblock %}

{% block title %}
	<title>{{title}}</title>
{% endblock %}

{% block main %}
	<main>
		<section class="form-container">
			<h2>Formulaire d'inscription</h2>
			<form action="/subscribe" method="post">
				<div>
					<label for="teamName">Votre Nom d'Ã©quipe</label>
					<input id="teamName" type="text" name="teamName">
					{% if error %}
						<p>{{error.teamName.message}}</p>
					{% endif %}
				</div>
				<div>
					<label for="name">Votre Nom</label>
					<input id="name" type="text" name="name">
					{% if error %}
						<p>{{error.name.message}}</p>
					{% endif %}
				</div>
				<div>
					<label for="email">Votre E-mail</label>
					<input id="email" type="email" name="email">
					{% if error %}
						<p>{{error.email.message}}</p>
					{% endif %}
				</div>
				<div>
					<label for="password">Votre mot de passe</label>
					<input id="password" type="password" name="password">
					{% if error %}
						<p>{{error.password.message}}</p>
					{% endif %}
				</div>
				<div>
					<label for="confirm_password">Confirmez votre mot de passe</label>
					<input id="confirm_password" type="password" name="confirm_password">
					{% if error and error.confirmPassword %}
						<p>{{error.confirmPassword.message}}</p>
					{% endif %}
				</div>
				<div>
					<button type="submit">Envoyer</button>
				</div>
			</form>
		</section>
	</main>
{% endblock %}
